<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <GeneDef>
    <defName>Archorace_ArchoskinGene</defName>
    <label>archoskin</label>
    <labelShortAdj>archotech</labelShortAdj>
    <description>Carriers of this gene harness the power of the archites in their bodies to improve the capabilities of their bodies.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
	<biostatArc>3</biostatArc>
	<statFactors>
      <InjuryHealingFactor>5</InjuryHealingFactor>
    </statFactors>
	<skinColorOverride>(255, 255, 255)</skinColorOverride>
    <displayCategory>Archite</displayCategory>
    <iconPath>Icons/Gene_Archoskin</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <forcedHeadTypes>
		<li>Archorace_ArchoskinAverage1Male</li>
		<li>Archorace_ArchoskinAverage2Male</li>
		<li>Archorace_ArchoskinAverage3Male</li>
		<li>Archorace_ArchoskinNarrow1Male</li>
		<li>Archorace_ArchoskinNarrow2Male</li>
		<li>Archorace_ArchoskinNarrow3Male</li>
		<li>Archorace_ArchoskinAverage1Female</li>
		<li>Archorace_ArchoskinAverage2Female</li>
		<li>Archorace_ArchoskinAverage3Female</li>
		<li>Archorace_ArchoskinNarrow1Female</li>
		<li>Archorace_ArchoskinNarrow2Female</li>
		<li>Archorace_ArchoskinNarrow3Female</li>
    </forcedHeadTypes>
    <exclusionTags>
		<li>WoundHealingRate</li>
		<li>PsychicAbility</li>
		<li>MaxTemperature</li>
		<li>MinTemperature</li>
		<li>ToxResistance</li>
		<li>AG_Bodies</li>
		<li>Bodies</li>
		<li>Body</li>
		<li>Fur</li>
    </exclusionTags>
    <statOffsets>
	  <ToxicResistance>1</ToxicResistance>
      <PsychicSensitivity>0.4</PsychicSensitivity>
      <MeditationFocusGain>0.2</MeditationFocusGain>
      <PsychicEntropyRecoveryRate>0.2</PsychicEntropyRecoveryRate>
      <ComfyTemperatureMin>-50</ComfyTemperatureMin>
	  <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statOffsets>
    <graphicData>
      <fur>Archorace_Archoskin</fur>
      <tattoosVisible>false</tattoosVisible>
    </graphicData>
	<modExtensions>
		<li Class="VanillaGenesExpanded.GeneExtension">		
			<dontColourFur>true</dontColourFur>
			<furHidesBody>true</furHidesBody>
		</li>
	</modExtensions>
  </GeneDef>
  
    <GeneDef ParentName="GeneLearningBase">
    <defName>Archorace_Learning</defName>
    <label>archotech learning</label>
    <description>Carriers of this gene have excellent memories and grasp new ideas quickly. They learn faster than others.</description>
    <iconPath>UI/Icons/Genes/Gene_FastLearning</iconPath>
	<displayCategory>Archite</displayCategory>
    <statOffsets>
      <GlobalLearningFactor>0.75</GlobalLearningFactor>
    </statOffsets>
    <biostatCpx>2</biostatCpx>
    <biostatMet>0</biostatMet>
	<biostatArc>1</biostatArc>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>brain</symbol></li>
        <li><symbol>nerd</symbol></li>
        <li><symbol>smart</symbol></li>
        <li><symbol>corti</symbol></li>
        <li><symbol>neuro</symbol></li>
        <li><symbol>mnemo</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>nerd</symbol></li>
        <li><symbol>brain</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>


</Defs>